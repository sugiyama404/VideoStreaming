#!/usr/bin/env bash

set -euo pipefail

function docker_grpc_compile_next() {
  local cwd="$1"
  cd "${cwd}"
  docker compose exec webserver /app/myapp/bin/ts-gen-service
}

function main() {
  local cwd
  cwd="$(cd "$(dirname "$0")/.." && pwd)"
  docker_grpc_compile_next "${cwd}"

}

if [[ "${BASH_SOURCE[0]}" == "${0}" ]]; then
  main "$@"
fi
