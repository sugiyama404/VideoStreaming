#!/usr/bin/env bash

set -euo pipefail

function docker_node_runner_dev() {
  local cwd="$1"
  cd "${cwd}"
  docker compose exec webserver sh -c "npm run dev"
}

function main() {
  local cwd
  cwd="$(cd "$(dirname "$0")/.." && pwd)"
  docker_node_runner_dev "${cwd}"

}

if [[ "${BASH_SOURCE[0]}" == "${0}" ]]; then
  main "$@"
fi
